<main>
  <div class="container">
    <h2 class="page-title">
      コレクター一覧
    </h2>
    <div class="spacer-medium"></div>
    <nav class="users__nav">
      <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to user_path(user) do %>
            <div class="users__nav-thum">
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
            </div>
            <p class="users__nav-name">
              <%= link_to user.username, user_path(user) %>
            </p>
            <p class="users__nav-count">
              投稿数：<%= user.artworks.count %>
            </p>
          <% end %>
        </li>
      <% end %>
      </ul>
    </nav>
    <div class="spacer-large"></div>
    <div class="spacer-large"></div>
    <h2 class="page-title">
      作品一覧
    </h2>
    <div class="spacer-medium"></div>
    <nav class="artworks__nav">
      <ul>
        <% @artworks.each do |artwork| %>
          <li>
            <div class="artworks__nav-thum">
              <%= link_to artwork_path(artwork) do %>
                <%= attachment_image_tag artwork, :image %>
              <% end %>
            </div>
            <div class="artworks__nav-pro">
              <div class="artworks__nav-pro-img">
                <%= attachment_image_tag artwork.user, :profile_image, fallback: "no-image.png" %>
              </div>
              <p>
                <%=link_to artwork.user.username, user_path(artwork.user) %>
              </p>
            </div>
            <p class="artworks__nav-time">
              <time><%= artwork.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
            </p>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</main>