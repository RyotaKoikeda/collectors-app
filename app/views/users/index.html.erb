<main>
  <div class="container">
    <h2 class="page-title">
      コレクター一覧
    </h2>
    <div class="spacer-medium"></div>
    <nav class="users__nav">
      <ul>
      <% @users.each do |user| %>
        <li>
          <%= link_to user_path(user) do %>
            <div class="users__nav-thum">
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
            </div>
            <p class="users__nav-name">
              <%= link_to user.username, user_path(user) %>
            </p>
            <p class="users__nav-count">
              投稿数：<%= user.artworks.count %>
            </p>
          <% end %>
        </li>
      <% end %>
      </ul>
    </nav>
  </div>
</main>